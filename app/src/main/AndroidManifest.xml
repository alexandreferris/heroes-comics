<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.com.alexandreferris.heroescomics">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="br.com.alexandreferris.heroescomics.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <!-- AdMob -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ADMOB_API_KEY"/>
        <!-- Fabric.IO -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="FABRIC_IO_API_KEY" />
        <activity
            android:name="br.com.alexandreferris.heroescomics.ui.character.Characters"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.alexandreferris.heroescomics.ui.GenericCharacters"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.alexandreferris.heroescomics.ui.GenericCreators"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.alexandreferris.heroescomics.ui.creator.CreatorDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.alexandreferris.heroescomics.ui.character.CharacterDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.alexandreferris.heroescomics.ui.comic.Comics"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.alexandreferris.heroescomics.ui.comic.ComicDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.alexandreferris.heroescomics.ui.serie.Series"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.alexandreferris.heroescomics.ui.serie.SerieDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.alexandreferris.heroescomics.ui.storie.Stories"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.alexandreferris.heroescomics.ui.storie.StorieDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.alexandreferris.heroescomics.ui.event.Events"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.alexandreferris.heroescomics.ui.event.EventDetails"
            android:screenOrientation="portrait" />
    </application>

</manifest>